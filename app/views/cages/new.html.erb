<div style="width:200px;">

<%= simple_form_for(@cage) do |f| %>
                                                                  
 <p><%= f.input :cage_type, :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" },
        :collection => ["Breeding","Injected","Waiting","Need Genotype"] %></p>
   
<p><%= f.input :num_mice,  :placeholder  => "Number of Mice", :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" } %></p>

 <p><%= f.input :line, :placeholder  => "Line", :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" } %></p>

 <p><%= f.input :num_litters,  :placeholder  => "Number of Litters", :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" } %></p>

 <p><%= f.input :pups, :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" },
        :collection => ["true", "false"] %></p>

<p> <%= f.input :avatar, as: :file %> </p>
                                                                              
<%= f.submit :class => "btn btn-success" %>
               
<% end %>


